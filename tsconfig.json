{
  "compilerOptions": {
    "resolveJsonModule": true,   // This allows importing JSON files
    "esModuleInterop": true,     // This ensures interoperability between CommonJS and ES modules
    "strict": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  }
}
